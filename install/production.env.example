# Primary domain where Callico will be served
CALLICO_DOMAIN=callico.example.com

# Optional domains for auxiliary services
FLOWER_DOMAIN=tasks.example.com
MINIO_DOMAIN=minio.example.com
MINIO_CONSOLE_DOMAIN=minio-console.example.com
TRAEFIK_DASHBOARD_DOMAIN=traefik.example.com

# Traefik configuration (used both by docker compose and the container)
TRAEFIK_HTTP_BIND_ADDRESS=0.0.0.0
TRAEFIK_HTTPS_BIND_ADDRESS=0.0.0.0
TRAEFIK_CONFIG_FILE=../install/traefik/traefik.toml
TRAEFIK_CERTS_DIR=../install/traefik/certs
TRAEFIK_TLS_CONFIG_FILE=../install/traefik/certs/tls.toml
# Optional: provide custom TLS certificate/key relative to TRAEFIK_CERTS_DIR
# Leave empty to rely on automatic Let's Encrypt certificates.
TRAEFIK_TLS_CERT_FILE=
TRAEFIK_TLS_KEY_FILE=
# Email used by Let's Encrypt to issue TLS certificates
TRAEFIK_ACME_EMAIL=admin@example.com

# Django configuration
INSTANCE_URL=https://callico.example.com
ALLOWED_HOSTS=callico.example.com
CSRF_TRUSTED_ORIGINS=https://callico.example.com
SIGNUP_ENABLED=false

# Django superuser bootstrap (used by install.sh)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=change-me
DJANGO_SUPERUSER_FIRST_NAME=Admin
DJANGO_SUPERUSER_LAST_NAME=User
DJANGO_SUPERUSER_DISPLAY_NAME=Admin User

# Database configuration
POSTGRES_USER=callico
POSTGRES_PASSWORD=change-me
POSTGRES_DB=callico
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgres://callico:change-me@postgres:5432/callico

# Minio credentials
MINIO_ROOT_USER=callico-minio
MINIO_ROOT_PASSWORD=change-me
AWS_ACCESS_KEY_ID=callico-minio
AWS_SECRET_ACCESS_KEY=change-me
STORAGE_BUCKET_NAME=callico
STORAGE_ENDPOINT_URL=https://minio.example.com
MINIO_BROWSER_REDIRECT_URL=https://minio-console.example.com

# Redis URL
REDIS_URL=redis://redis:6379/0
